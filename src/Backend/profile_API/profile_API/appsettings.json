{
  "Serilog": {
    "Using": [ "Serilog.Sinks.MongoDB", "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "MongoDB",
        "Args": {
          "connectionString": "mongodb://localhost:27017/logsDatabase",
          "databaseName": "logsDatabase",
          "collectionName": "Logs",
          "autoCreateDatabase": true
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5432;Database=Profile;User Id=postgres;Password=postgres;"
  },

  "Auth": {
    "AccessTokenLifetimeInHours": 8,
    "EncryptionKey": "O%r!)(-[[U.wwao3yN;&u'Uik&V*gJ@)`dIoa'u}",
    "Issuer": "WebApiServer",
    "Audience": "WebClient"
  }
}
